{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "outDir": "addon",
    "baseUrl": ".",
    "paths": {
      "dummy/tests/*": ["tests/*"],
      "dummy/config/*": ["tests/dummy/config/*"],
      "dummy/*": ["tests/dummy/app/*"],
      "tracked-maps-and-sets": ["src"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
